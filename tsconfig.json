{
  "compilerOptions": {
    "incremental": true,
    "target": "es5",
    "lib": [
      "ESNext"
    ],
    "declaration": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@packages/client/*": [
        "./packages/client/src/*"
      ],
      "@packages/server/*": [
        "./packages/server/src/*"
      ],
      "@packages/shared/*": [
        "./packages/shared/src/*"
      ]
    },
    "pretty": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "**/*spec.ts"
  ]
}