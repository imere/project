{
  "monorepo": true,
  "root": "apps/services",
  "sourceRoot": "apps/services/src",
  "compilerOptions": {
    "webpack": false,
    "tsConfigPath": "apps/main/tsconfig.json"
  },
  "projects": {
    "main": {
      "type": "application",
      "root": "apps/main",
      "entryFile": "main",
      "sourceRoot": "apps/main/src",
      "compilerOptions": {
        "tsConfigPath": "apps/main/tsconfig.json"
      }
    },
    "session": {
      "type": "application",
      "root": "apps/session",
      "entryFile": "main",
      "sourceRoot": "apps/session/src",
      "compilerOptions": {
        "tsConfigPath": "apps/session/tsconfig.json"
      }
    }
  }
}